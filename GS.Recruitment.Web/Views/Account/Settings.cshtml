@using GS.Recruitment.BusinessObjects.Implementation
@model UserSettings
@{
    Layout = "~/Views/Shared/_LayoutControlPanel.cshtml";
    ViewBag.Title = "Settings";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Change notification settings
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Settings", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.UserId)
                            <div class="form-group">
                                @Html.LabelFor(m => m.SystemNotifications, new { @class = "col-md-4 control-label" })
                                <div class="col-md-1">
                                    @Html.CheckBoxFor(m => m.SystemNotifications, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.EmailNotifications, new { @class = "col-md-4 control-label" })
                                <div class="col-md-1">
                                    @Html.CheckBoxFor(m => m.EmailNotifications, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-10 control-label"> </label>
                                <div class="col-md-10">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
