@using GS.Recruitment.Web.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Log in";
}

<!-- about us-->
<section id="about">
    <div class="container clearfix">
        <div class="row">
            <div class="col-md-6 margin-bottom">
                <h2 class="heading">Recruitment Service</h2>
                <p class="lead">NO DOWNLOADS. NO SOFTWARE TO INSTALL.</p>
                <p>
                    What is Gresham Recruitment Cloud Service?<br />
                    Recruitment Cloud Service is a candidate relationship and artificial intelligence (AI) system. It designed to help you and your team find a new employees smarter.
                </p>
                <p>
                    With Gresham Recruitment Cloud you can qualify more candidates, boost productivity, gain better business insights and ultimately increase recruitment process outcome.
                </p>
                <div class="row">
                    <div class="col-sm-6">
                        <ul>
                            <li>hudge candidate's database</li>
                            <li>candidate's relationships management (CRM)</li>
                            <li>artificial intelligence search (AI)</li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul>
                            <li>social networks integration</li>
                            <li>task management</li>
                            <li>recruitment process workflow</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6 margin-bottom">
                <section id="loginForm" class="login padding-left padding-right">
                    @Html.Partial("Account/_Login")
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
