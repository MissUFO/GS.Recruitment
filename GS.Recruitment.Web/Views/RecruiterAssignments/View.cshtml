@using GS.Recruitment.BusinessObjects.Implementation
@using GS.Recruitment.BusinessObjects.Enum
@model Assignment
@{
    Layout = "~/Views/Shared/_LayoutControlPanel.cshtml";
    ViewBag.Title = "Assignment";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Assignment details
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                       
                            <div class="form-group">
                                @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(m => m.Title, new { @class = "form-control", required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(m => m.Description, new { @class = "form-control", required = "required" })
                                </div>
                            </div>
                            
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
