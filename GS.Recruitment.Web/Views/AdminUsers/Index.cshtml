@using GS.Recruitment.BusinessObjects.Implementation
@using GS.Recruitment.BusinessObjects.Enum
@model List<User>

    @{
        Layout = "~/Views/Shared/_LayoutControlPanel.cshtml";
        ViewBag.Title = "Users";
    }

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Users and account management
                    <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                    Actions
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li>
                                        <a href="@Url.Action("AddEdit","AdminUsers")">New User</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="#">Lock</a>
                                    </li>
                                    <li>
                                        <a href="#">Delete</a>
                                    </li>
                                </ul>
                            </div>
                     </div>
                </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Login</th>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>LastLoginOn</th>
                                    <th>CreatedOn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX" onclick="location.href = '@(Url.Action("AddEdit", "AdminUsers", new { id = item.UserId }))'">
                                        <td>@item.Login</td>
                                        <td>@item.Name</td>
                                        <td>@(item.Roles.Any(itm => itm.RoleType == RoleType.Administrator) ? "Administrator" : "Recruiter")</td>
                                        <td>@item.UserStatus.ToString()</td>
                                        <td>@item.LastLoginOn</td>
                                        <td>@item.CreatedOn.Date</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    @section scripts
{
        <!-- DataTables JavaScript -->
        <script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/Scripts/datatables-plugins/dataTables.bootstrap.min.js"></script>
        <script src="~/Scripts/datatables-responsive/dataTables.responsive.js"></script>

        <script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    responsive: true
                });
            });
        </script>

    }
