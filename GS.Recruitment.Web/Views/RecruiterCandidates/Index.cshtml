@using GS.Recruitment.BusinessObjects.Implementation
@using GS.Recruitment.BusinessObjects.Enum
@model List<Contact>

    @{
        Layout = "~/Views/Shared/_LayoutControlPanel.cshtml";
        ViewBag.Title = "Candidates";
    }

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Candidates and contacts management
                    <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                    Actions
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li>
                                        <a href="@Url.Action("AddEdit","RecruiterCandidates")">New User</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="#">Delete</a>
                                    </li>
                                </ul>
                            </div>
                     </div>
                </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>LastName</th>
                                    <th>FirstName</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Company</th>
                                    <th>JobTitle</th>
                                    <th>LastContactDate</th>
                                    <th>LastContactedBy</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX" onclick="location.href = '@(Url.Action("AddEdit", "RecruiterCandidates", new { id = item.Id }))'">
                                        <td>@item.LastName</td>
                                        <td>@item.FirstName</td>
                                        <td>@*@item.Emails.FirstOrDefault().EmailAddress*@</td>
                                        <td>@*@item.Phones.FirstOrDefault().PhoneNumber*@</td>
                                        <td>@*@item.Experiences.FirstOrDefault().CompanyName*@</td>
                                        <td>@*@item.Experiences.FirstOrDefault().JobTitle*@</td>
                                        <td>@*@item.JobPreferences.FirstOrDefault().LastContactDate*@</td>
                                        <td>@*@item.JobPreferences.FirstOrDefault().LastContactedBy*@</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    @section scripts
{
        <!-- DataTables JavaScript -->
        <script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/Scripts/datatables-plugins/dataTables.bootstrap.min.js"></script>
        <script src="~/Scripts/datatables-responsive/dataTables.responsive.js"></script>

        <script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    responsive: true
                });
            });
        </script>

    }
