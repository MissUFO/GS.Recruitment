@using Microsoft.AspNet.Identity
@using GS.Recruitment.BusinessObjects.Enum
@using GS.Recruitment.BusinessObjects.Implementation

<!-- navbar-->
<header class="header">
    <div class="sticky-wrapper">
        <div role="navigation" class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><a href="#intro" class="navbar-brand scroll-to"><abbr href="@Url.Action("Index","Home")"> <img src="~/Images/logo.png" alt=""></a></abbr>
                </div>
                <div id="navigation" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href="#about">Home </a></li>
                        <li><a href="#contact">Contact</a></li>
                        @if (Request.IsAuthenticated)
                        {
                            if ((User as UserCustomPrincipal) != null)
                            {
                                if ((User as UserCustomPrincipal).IsInRole(RoleType.Administrator))
                                {
                                <li>
                                    <a href="@Url.Action("Index", "AdminDashboard")">Dashboard</a>
                                </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="@Url.Action("Index","RecruiterDashboard")">Dashboard</a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- /.navbar-->