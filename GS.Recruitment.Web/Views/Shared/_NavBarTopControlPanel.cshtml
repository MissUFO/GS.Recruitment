@using Microsoft.AspNet.Identity
@using GS.Recruitment.BusinessObjects.Enum
@using GS.Recruitment.BusinessObjects.Implementation

<ul class="nav navbar-top-links navbar-right">
@if (Request.IsAuthenticated)
{
                if ((User as UserCustomPrincipal) != null)
                {
                    if ((User as UserCustomPrincipal).IsInRole(RoleType.Recruiter))
                    {
                        Html.RenderAction("UserTasks", "Notification");
                        Html.RenderAction("UserAssignments", "Notification");
                    }
                }
        <li class="dropdown">
            <!-- .dropdown-user -->
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="@Url.Action("Edit", "Account")"><i class="fa fa-user fa-fw"></i> @User.Identity.Name</a>
                </li>
                <li>
                    <a href="@Url.Action("Settings", "Account")"><i class="fa fa-gear fa-fw"></i> Settings</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="@Url.Action("LogOff", "Account")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                </li>
            </ul>
            <!-- /.dropdown-user -->
        </li>
}
</ul>